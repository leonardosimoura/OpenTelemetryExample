@page
@model FrontEnd.Pages.Pessoa.CreateModel
@{
}

<script>
    let enderecosCount = 0;
    function onClickAddEndereco() {
        const id = "Enderecos_" + enderecosCount + "_Nome";
        $("#containerEnderecos").append("<input id='"+ id +"' name='Enderecos[" + enderecosCount +"].Nome' type='text'  /> </br>");
        $("#"+ id).focus()
        enderecosCount++;
    }
</script>

<form method="post">
    Nome:
    <input asp-for="Pessoa.Nome" />
    <hr />
    Endereços:
    <button type="button" onclick="onClickAddEndereco()"> + Endereço </button>
    <br />
    <div id="containerEnderecos">

    </div>
    <hr />
    <input type="submit" />
</form>

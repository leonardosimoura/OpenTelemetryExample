@page
@model FrontEnd.Pages.Pessoa.IndexModel
@{
}



<h2>Pessoas</h2>

<a class="text-dark font-weight-bold" asp-area="" asp-page="/Pessoa/Create">+ Nova Pessoa</a>
<hr />
<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Endereços </th>
    </tr>
    @foreach (var item in Model.Pessoas)
    {
        <tr>
            <td>@item.PessoaId</td>
            <td>@item.Nome</td>
            <td> @string.Join(" || ", @item.Enderecos.Select(s => s.Nome)) </td>
        </tr>
    }
</table>
